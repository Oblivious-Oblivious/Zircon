@import "Object"
@import "Point"

object Circle implements Point((int): rad) {
    fields {
        int rad;
    }

    init {
        self->rad = rad;
    }

    (void) super |> "draw" |> {
        printf("circle at (%d, %d) rad: %d\n", super->x, super->y, self->rad);
    }

    (void) super |> "move" |> (int): dx, (int): dy |> {
        super->x += dx * 2;
        super->y += dy * 2;
    }

    (void) self |> "hello" |> {
        printf("Hello from Circle class\n");
    }
}